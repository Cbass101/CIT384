        <script> // Below is some JavaScript creating a slider to show the next image.
            const images = ["Slider1.JPG", "Slider2.JPG", "EventPic4.JPG", "Slider4.JPG", "Slider5.JPG", "Slider6.JPG"];
            let currentIndex = 0;
        
            function changeImage() {
                currentIndex = (currentIndex + 1) % images.length;
                document.getElementById("slider").src = images[currentIndex];
            }
        
            setInterval(changeImage, 5000); // Change image every 5 seconds
        </script>
